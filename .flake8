[flake8]
# Select only critical error types
select =
    # Runtime errors
    E9,
    # Invalid syntax
    F63,
    # Syntax errors
    F7,
    # Undefined variables
    F82,
    # Bare except clauses
    E722

# Ignore non-critical issues
ignore =
    # Line too long
    E501,
    # Unused imports
    F401,
    # Unused variables
    F841,
    # Line break before operator
    W503,
    # Continuation line under-indented
    E128,
    # Star imports
    F403,
    # Names from star imports
    F405,
    # Module imports not at top
    E402,
    # Lambda assignments
    E731,
    # f-string missing placeholders
    F541

# Exclude directories
exclude =
    # Git directory
    .git,
    # Virtual environments
    venv

# Maximum complexity
max-complexity = 15 

per-file-ignores =
    __init__.py:F401
    tests/*:F401 